<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FitnessclassLists">

    <TextView
            android:layout_width="279dp"
            android:layout_height="48dp"
            android:text="Fitness Classes"
            android:textColor="#2b5a8e"
            android:textStyle="bold"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023"/>


    <Button
            android:id="@+id/yogaBtn"
            android:layout_width="85dp"
            android:layout_height="41dp"
            android:text="Yoga"
            android:textSize="14sp"
            android:textColor="#2b5a8e"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="234dp" tools:layout_editor_absoluteX="150dp"/>

    <Button
            android:id="@+id/spinningBtn"
            android:layout_width="90dp"
            android:layout_height="41dp"
            android:layout_marginBottom="384dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:text="Spinning"
            android:textSize="14sp"
            android:textColor="#2b5a8e"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintHorizontal_bias="0.439"/>


    <Button
            android:id="@+id/hiitBtn"
            android:layout_width="85dp"
            android:layout_height="41dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:text="HIIT"
            android:textSize="14sp"
            android:textColor="#2b5a8e"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintHorizontal_bias="0.431"
            android:layout_marginBottom="316dp"/>

    <Button
            android:id="@+id/addfitnessclassBtn"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:layout_marginBottom="64dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:text="Add fitness class"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintHorizontal_bias="0.0"/>




</android.support.constraint.ConstraintLayout>


